function SignIn() {
    const provider = new firebase.auth.GoogleAuthProvider();
    auth.signInWithPopup(provider);
  }
  
  function SignOut() {
    return auth.currentUser && auth.signOut();
  }
  
  const itemRef = firestore.collection('items');
  const query = itemRef.orderBy('Cost').limit(25);

  const locationRef = firestore.collection('locations');

  const [items] = useCollectionData(query, { idField: 'id' });

  const onPress = () => {
    await messagesRef.add({
